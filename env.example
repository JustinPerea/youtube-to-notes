# YouTube-to-Notes Environment Configuration

# =============================================================================
# GEMINI API CONFIGURATION
# =============================================================================
# Get your API key from Google AI Studio: https://makersuite.google.com/app/apikey
GOOGLE_GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Get these from your Supabase project dashboard
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# =============================================================================
# NEXTAUTH CONFIGURATION
# =============================================================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# =============================================================================
# REDIS CONFIGURATION (for Bull/BullMQ)
# =============================================================================
# For local development, you can use Redis Cloud or Docker
REDIS_URL=redis://localhost:6379
# Or for Redis Cloud: redis://username:password@host:port

# =============================================================================
# GITHUB INTEGRATION (Optional)
# =============================================================================
# For GitHub agent functionality (issue creation, CI/CD, etc.)
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_OWNER=your_github_username
GITHUB_REPO=youtube-to-notes
GITHUB_API_URL=https://api.github.com

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Application settings
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# ANALYTICS & MONITORING (Optional)
# =============================================================================
# Vercel Analytics (optional)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your_vercel_analytics_id

# Sentry Error Tracking (optional)
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable debug logging
DEBUG=app:*

# Database connection pool size
DATABASE_POOL_SIZE=10

# Maximum video processing time (in seconds)
MAX_VIDEO_PROCESSING_TIME=300

# Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# =============================================================================
# POLAR.SH CONFIGURATION
# =============================================================================
# Polar payment processing
POLAR_ACCESS_TOKEN=your_polar_access_token_here
POLAR_SUCCESS_URL=http://localhost:3003/subscription/success?checkout_id={CHECKOUT_ID}
POLAR_WEBHOOK_SECRET=your_polar_webhook_secret_here

# Product IDs from your Polar dashboard
POLAR_BASIC_PRODUCT_ID=your_basic_product_id_here
POLAR_PRO_PRODUCT_ID=your_pro_product_id_here
